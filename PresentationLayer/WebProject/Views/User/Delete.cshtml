@model WebProject.Models.User

@{
    ViewBag.Title = "Delete";
}

<h2>Deleting Account</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Email Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Full Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerInformation.firstName) 
            @Html.DisplayFor(model => model.CustomerInformation.lastName)
        </dd>

        <dt>
            <b>Phone Number</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerInformation.phone)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
