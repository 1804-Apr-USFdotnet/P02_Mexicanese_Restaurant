@model WebProject.Models.MenuItem

@{
    ViewBag.Title = "Details";
}

<h2>Details on @Html.DisplayFor(model => model.itemName).</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Recipe Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.itemName)
        </dd>

        <dt>
            Description:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.itemDescription)
        </dd>

        <dt>
            Price:
        </dt>

        <dd>
            $@Html.DisplayFor(model => model.itemPrice)
        </dd>

        <dt>
            Stock:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.itemID }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.itemID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
